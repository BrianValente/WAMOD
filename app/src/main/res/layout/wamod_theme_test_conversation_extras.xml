<?xml version="1.0" encoding="utf-8"?>
<merge
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <io.codetail.widget.RevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/wamod_theme_test_conversation_extras"
        android:gravity="center">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wamod_theme_test_conversation_extras_mic_container"
            android:background="#55000000"
            android:visibility="gone"
            android:clickable="true">
            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/wamod_theme_test_conversation_extras_mic_bg"
                android:elevation="12dp"
                android:id="@+id/wamod_theme_test_conversation_extras_mic"
                android:layout_marginTop="80dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="279.67dp"
                        android:layout_height="39.00dp"
                        android:src="@drawable/wamod_theme_test_conversation_extras_mic_wave1"
                        android:id="@+id/wamod_theme_test_conversation_extras_mic_wave1"
                        android:layout_marginLeft="-50dp"/>
                    <ImageView
                        android:layout_width="279.67dp"
                        android:layout_height="39.00dp"
                        android:src="@drawable/wamod_theme_test_conversation_extras_mic_wave1" />
                </LinearLayout>
                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/wamod_theme_test_conversation_extras_mic_icon"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="120dp">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/wamod_theme_test_conversation_extras_mic_options_bg"
                    android:backgroundTint="#940707"
                    android:clickable="true"
                    android:src="@drawable/wamod_theme_test_conversation_extras_trashcan"
                    android:id="@+id/wamod_theme_test_conversation_extras_mic_delete"
                    android:elevation="12dp"/>
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/wamod_theme_test_conversation_extras_mic_options_bg"
                    android:backgroundTint="#940707"
                    android:clickable="true"
                    android:foreground="?selectableItemBackground"
                    android:src="@drawable/wamod_theme_test_conversation_extras_send"
                    android:layout_marginLeft="90dp"
                    android:id="@+id/wamod_theme_test_conversation_extras_mic_send"
                    android:elevation="12dp"/>
            </LinearLayout>
        </RelativeLayout>
    </io.codetail.widget.RevealLinearLayout>
</merge>