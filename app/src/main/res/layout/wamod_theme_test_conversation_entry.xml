<?xml version="1.0" encoding="utf-8"?>
<merge
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <io.codetail.widget.RevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:orientation="vertical"
        android:id="@+id/wamod_theme_test_conversation_entry_reveallinearlayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="#fafafa"
            android:visibility="gone"
            android:id="@+id/wamod_theme_test_conversation_entry_attach_layout"
            android:orientation="vertical"
            android:clickable="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="13dp">
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/attach_gallery"
                    android:layout_marginRight="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/wamod_theme_test_conversation_entry_attach_gallery" />
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/attach_camera"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/wamod_theme_test_conversation_entry_attach_camera"/>
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/attach_audio"
                    android:layout_marginLeft="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/wamod_theme_test_conversation_entry_attach_audio"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:gravity="center_horizontal"
                    android:textColor="#777777"
                    android:layout_marginRight="27dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Camera"
                    android:gravity="center_horizontal"
                    android:textColor="#777777"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Audio"
                    android:gravity="center_horizontal"
                    android:textColor="#777777"
                    android:layout_marginLeft="27dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="12dp">
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/attach_contact"
                    android:layout_marginRight="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/wamod_theme_test_conversation_entry_attach_contact"/>
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/attach_location"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/wamod_theme_test_conversation_entry_attach_location"/>
                <ImageButton
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:src="@drawable/attach_contact"
                    android:layout_marginLeft="30dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:id="@+id/wamod_theme_test_conversation_entry_attach_edit"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="6dp">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:gravity="center_horizontal"
                    android:textColor="#777777"
                    android:layout_marginRight="27dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:gravity="center_horizontal"
                    android:textColor="#777777"
                    android:layout_marginLeft="27dp"
                    android:layout_marginRight="27dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:gravity="center_horizontal"
                    android:textColor="#777777"
                    android:layout_marginLeft="27dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#88000000"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2.25dp"
            android:id="@+id/wamod_theme_test_conversation_entry_layout">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:padding="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:id="@+id/wamod_theme_test_conversation_entry_attach_btn"
                android:background="?actionBarItemBackground"
                android:src="@drawable/wamod_theme_test_conversation_icons_attach"
                android:scaleType="centerInside"
                android:tint="#ffffff"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Say something..."
                android:textSize="18sp"
                android:layout_weight="6"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:background="@android:color/transparent"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:id="@+id/wamod_theme_test_conversation_entry_edittext"
                android:maxHeight="171dp"
                android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"
                android:imeOptions="actionSend|flagNoEnterAction"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:padding="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:id="@+id/wamod_theme_test_conversation_entry_send"
                android:background="?actionBarItemBackground"
                android:src="@drawable/wamod_theme_test_conversation_icons_send"
                android:scaleType="centerInside"
                android:tint="#ffffff"
                android:visibility="gone"/>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="0dp"
                android:padding="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:id="@+id/wamod_theme_test_conversation_entry_mic"
                android:background="?actionBarItemBackground"
                android:src="@drawable/wamod_theme_test_conversation_icons_mic"
                android:scaleType="centerInside"
                android:tint="#ffffff"/>
        </LinearLayout>
    </io.codetail.widget.RevealLinearLayout>
</merge>